<% content_for :header do %>
  <p id="code" style="display:none"><%= session[:company_id]%></p>
  <section class="content-header">
    <div class="row">
      <div class="col-xs-12">
        <ol class="breadcrumb" style="font-size:medium;">
          <li><a href="/dashboard"><i class="fa fa-dashboard"></i> 首页 </a></li>
          <li class="active">建设公示</li>
        </ol>
      </div>
    </div>
  </section>
<% end %>

<% content_for :content do %>
  <section class="content" style="margin-top:-25px;" >
    <div class="col-md-12">
      <div class="row">
        <div class="box">
          <div class="box-body">
            <table class="table table-striped table-hover" id="tTrolleys">
              <thead>
                <tr style="border-bottom:1px solid gray;">
                  <th>项目编号</th>
                  <th>项目类型</th>
                  <th>总金额</th>
                  <th>补贴金额</th>
                  <th>申请日期</th>
                  <th></th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="modal fade in">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button aria-label="Close" data-dismiss="modal" class="close" type="button">
            <span aria-hidden="true">×</span></button>
          <h4 class="modal-title" style="margin-left:200px;">项目申请公示</h4>
        </div>
        <div class="modal-body" style="font-size:15px;">
          <form role="form">
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">项目名称</label>
                <input type="email" disabled="disabled" placeholder="********" id="exampleInputEmail1" class="form-control">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">组织实施机构</label>
                <input type="password" disabled="disabled" placeholder="********" id="exampleInputPassword1" class="form-control">
              </div>
              <div class="form-group">
                <label for="exampleInputFile">建设位置</label>
                <input type="password" disabled="disabled" placeholder="********" id="exampleInputPassword1" class="form-control">
              </div>
              <div class="form-group">
                <label for="exampleInputFile">建设总规模</label>
                <input type="password" disabled="disabled" placeholder="********" id="exampleInputPassword1" class="form-control">
              </div>
              <div class="form-group">
                <label for="exampleInputFile">总投资</label>
                <input type="password" disabled="disabled" placeholder="********" id="exampleInputPassword1" class="form-control">
              </div>
              <div class="form-group">
                <label for="exampleInputFile">建设工期</label>
                <input type="password" disabled="disabled" placeholder="********" id="exampleInputPassword1" class="form-control">
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button data-dismiss="modal" class="btn btn-default pull-right" type="button">关闭</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
<% end %>