<% content_for :header do %>
  <p id="code" style="display:none"><%= session[:company_id]%></p>
  <section class="content-header">
    <div class="row">
      <div class="col-xs-12">
        <ol class="breadcrumb" style="font-size:medium;">
          <li><a href="/dashboard"><i class="fa fa-dashboard"></i> 首页 </a></li>
          <li class="active">项目查询</li>
        </ol>
      </div>
    </div>
    <div class="col-md-12">
      <h4>
        今日保存或提交项目
        <small>2016年8月21日</small>
      </h4>
    </div>
  </section>
<% end %>

<% content_for :content do %>
  <script type="text/javascript" src="/plugins/jq_datepicker/js/jquery-1.5.1.js"></script>
  <script src="/plugins/jq_datepicker/js/lyz.calendar.min.js" type="text/javascript"></script>
  <section class="content" style="margin-top:-25px;" >
    <div class="col-md-12">
      <div class="row">
        <div class="box">
          <div class="box-body">
            <table class="table table-striped table-hover" id="tTrolleys">
              <thead>
                <tr style="border-bottom:1px solid gray;">
                  <th>项目编号</th>
                  <th>项目名称</th>
                  <th>项目类别</th>
                  <th>申请日期</th>
                  <th>状态</th>
                  <th></th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="row" style="background-color:#00c0ef;border-bottom-left-radius: 3px;border-bottom-right-radius: 3px;border-top-left-radius: 3px;border-top-right-radius: 3px;box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);font-weight: bold;margin-bottom: 4px;padding-bottom: 5px;padding-left: 10px;padding-right: 10px;padding-top: 5px;text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);">
        

        <div style="float:left;">
        项目查询
          <span style="font-weight:normal;margin-left:50px;">开始日期：</span><input id="startDate" style="width:170px;border-radius:5px;padding:5px 5px;border:1px solid #ccc;" />
          <span style="font-weight:normal;margin-left:50px;">结束日期：</span><input id="endDate" style="width:170px;border-radius:5px;padding:5px 5px;border:1px solid #ccc;" />
        </div>
        <div style="float:right;">
          <button id="date_search" class="btn btn-block btn-default" style="padding:5px 5px;width:100px;margin-left:50px;"  type="button">搜索</button>
        </div>
        
      </div>
    </div>

    <div class="col-md-12" id="search_result" style="display:none;">
      <div class="row">
        <div class="box">
          <div class="box-title">
            <span style="padding-left:20px;">搜索结果</span>
          </div>
          <div class="box-body">
            <table class="table table-striped table-hover" id="tTrolleys1">
              <thead>
                <tr style="border-bottom:1px solid gray;">
                  <th>项目编号</th>
                  <th>项目名称</th>
                  <th>项目类别</th>
                  <th>申请日期</th>
                  <th>状态</th>
                  <th></th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>